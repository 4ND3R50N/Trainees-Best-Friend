<Controls:MetroWindow x:Class="tbfContentManager.MainContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tbfContentManager"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="MainContentWindow" Height="485.667" Width="650" Closing="MetroWindow_Closing">
    <Grid Margin="0,0,0,1" >

        <Label x:Name="lblWelcomeMessage" Content="Welcome, lblNameOfUser" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,9,0,0" Width="226" FontSize="15" Height="30" FontWeight="Bold"/>

        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="338" VerticalAlignment="Top" Width="642" Margin="0,54,0,0">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource {x:Type TabItem}}">
                    <Setter Property="Controls:ControlsHelper.HeaderFontSize" Value="16" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="Status" BorderThickness="0" Margin="0,0,-52,17">
                <Grid Margin="104,-50,0,0" Width="530" Height="330">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Grid>
                                <GroupBox x:Name="groupBox" Header="Connection Status" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Height="143" Width="225">
                                    <Grid>
                                        <Label x:Name="label" Content="Database Status:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="0,40,0,0" FontWeight="Bold"/>
                                        <Label x:Name="label_Copy" Content="Controller Status:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="0,71,0,0" FontWeight="Bold"/>
                                        <Label x:Name="lblInternetOnline" Content="Online" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="166,9,-0.4,0" HorizontalContentAlignment="Right" Background="{x:Null}" Foreground="#FF17FF00"/>
                                        <Label x:Name="lblDatabaseOnline" Content="Online" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="166,40,-0.4,0" HorizontalContentAlignment="Right" Background="{x:Null}" Foreground="#FF17FF00" RenderTransformOrigin="-0.781,0.538"/>
                                        <Label x:Name="label_Copy3" Content="Internet Status:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="0,9,0,0" FontWeight="Bold"/>
                                        <Label x:Name="lblControllerOnline" Content="Online" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="166,71,-0.4,0" HorizontalContentAlignment="Right" Background="{x:Null}" Foreground="#FF17FF00"/>
                                    </Grid>
                                </GroupBox>
                                <GroupBox x:Name="groupBox_Copy" Header="User Details" HorizontalAlignment="Left" Margin="285,5,0,0" VerticalAlignment="Top" Height="143" Width="225">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Label x:Name="label1" Content="Forename:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="0,26,0,0" FontWeight="Bold"/>
                                        <Label x:Name="label_Copy1" Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="0,52,0,0" FontWeight="Bold"/>
                                        <Label x:Name="label_Copy2" Content="Nickname:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" FontWeight="Bold"/>
                                        <Label x:Name="label_Copy4" Content="&lt;NickName&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="70,0,0,0" HorizontalContentAlignment="Right"/>
                                        <Label x:Name="label_Copy5" Content="&lt;ForeName&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="70,26,0,0" HorizontalContentAlignment="Right"/>
                                        <Label x:Name="label_Copy6" Content="&lt;Name&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="70,52,0,0" HorizontalContentAlignment="Right"/>
                                        <Label x:Name="label_Copy7" Content="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="0,78,0,0" FontWeight="Bold"/>
                                        <Label x:Name="label_Copy8" Content="&lt;Email&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="70,78,0,0" HorizontalContentAlignment="Right"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid>
                                <GroupBox x:Name="groupBox_Copy2" Header="Active Licences" Margin="10,5,0,0" VerticalAlignment="Top" Height="70">
                                    <Grid>
                                        <Label x:Name="label3" Content="Amount:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,2,0,0" FontWeight="Bold"/>
                                        <Label x:Name="lblLicencesAmount" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,2,0,0" RenderTransformOrigin="0.455,0.904" Width="65" Height="24"/>
                                        <Label x:Name="label3_Copy" Content="Licences:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,2,0,0" FontWeight="Bold"/>
                                        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Margin="190,2,0,0" Height="15"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid>
                                <GroupBox x:Name="groupBox_Copy1" Header="Content Statistics" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Height="139" Width="500">
                                    <Grid>
                                        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="79,9,0,0" VerticalAlignment="Top" Width="120"/>
                                        <Label x:Name="label2" Content="Workouts:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="0,40,0,0"/>
                                        <Label x:Name="label_Copy9" Content="Exercises:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="0,71,0,0"/>
                                        <Label x:Name="label_Copy10" Content="Rooms:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="0,9,0,0"/>
                                        <ComboBox x:Name="comboBox_Copy" HorizontalAlignment="Left" Margin="79,40,0,0" VerticalAlignment="Top" Width="120"/>
                                        <ComboBox x:Name="comboBox_Copy1" HorizontalAlignment="Left" Margin="79,71,0,0" VerticalAlignment="Top" Width="120"/>
                                        <Separator Height="13" Margin="0,31,0,0" VerticalAlignment="Top"/>
                                        <Separator Height="13" Margin="0,62,0,0" VerticalAlignment="Top"/>
                                        <Separator Height="13" Margin="0,94,0,0" VerticalAlignment="Top"/>
                                        <Label x:Name="label_Copy11" Content="Amount:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="204,9,0,0"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="User&#xD;&#xA;Management" Margin="-54,30,54,-36" Background="{x:Null}">
                <Grid Margin="104,-50,0,0" Width="530" Height="330"/>
            </TabItem>
            <TabItem Header="Room&#xA;Management" Margin="-161.6,82,0,-82" HorizontalAlignment="Left" Width="107">
                <Grid Margin="104,-50,0,0" Width="530" Height="330">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Grid>
                                <Grid>
                                    <Button Width="240" Height="35" VerticalAlignment="Top" Margin="5,5,280,0" >
                                    <StackPanel>
                                        <Image Margin="-15,0,180,0" Source="/Images/72_72_weiß_rund.png" Stretch="None" />
                                        <TextBlock Margin="15,-23,0,0" Text="Neuen Raum hinzufügen" FontSize="15" />
                                    </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid>
                                    <Button Width="250" Height="35" VerticalAlignment="Top" Margin="230,5,0,0" >
                                    <StackPanel>
                                        <Image Margin="0,0,200,0" Source="/Images/72_72_weiß_rund.png" Stretch="None" />
                                            <TextBlock Margin="30,-23,10,0" Text="Raum löschen" FontSize="15" />
                                        </StackPanel>
                                </Button>
                                </Grid>
                            </Grid>
                            <Grid>
                                <GroupBox x:Name="groupBox4" Header="Rooms" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Height="250" Width="240">
                                    
                                </GroupBox>
                                <GroupBox x:Name="groupBox5" Header="Raum Informationen" HorizontalAlignment="Left" Margin="255,5,0,0" VerticalAlignment="Top" Height="250" Width="250">

                                </GroupBox>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Workout&#xD;&#xA;Management" HorizontalAlignment="Right" Height="48" VerticalAlignment="Top" Width="107" Margin="-322,132,322,-132">
                <Grid Margin="104,-50,0,0" Width="530" Height="330"/>
            </TabItem>
            <DockPanel Height="68" LastChildFill="False" Width="235">
                <DockPanel Height="0" LastChildFill="False" VerticalAlignment="Top" Width="100"/>
            </DockPanel>
        </TabControl>
        <Grid HorizontalAlignment="Left" Height="54" VerticalAlignment="Top" Width="642">
            <Separator Height="13" Margin="0,41,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btnLogout" Content="Logout" HorizontalAlignment="Left" Margin="557,10,0,0" VerticalAlignment="Top" Width="75" Height="31" Foreground="#CC0050EF" Click="btnLogout_Click"/>
            <Image x:Name="image" Height="44" Margin="270,0,248,0" VerticalAlignment="Top"/>

        </Grid>
        <Separator Margin="0,0,0,30" Height="3" VerticalAlignment="Bottom"/>
        <DockPanel Height="30" VerticalAlignment="Bottom">

            <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom"  Background="White" Height="24">
                <StatusBarItem  Height="23" VerticalAlignment="Bottom">
                    <TextBlock x:Name="lblConnectionStatus" Text="lblConnectionStatus" Width="110" Foreground="Black"/>
                </StatusBarItem>
                <Separator  Grid.Column="1" />
                <StatusBarItem  Height="23" VerticalAlignment="Bottom">
                    <TextBlock x:Name="lblCursorPosition" Text="lblOtherInformation" Width="110" Foreground="Black" VerticalAlignment="Bottom" />
                </StatusBarItem>
                <Separator Grid.Column="1" />
                <StatusBarItem  Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <Grid Width="207">
                        <TextBlock x:Name="lblLoadingInformation" Text="lblLoadingDescription" Foreground="Black" Margin="0,0,75,0" Width="122" VerticalAlignment="Bottom" />
                        <ProgressBar Margin="137,0,0,2" Height="Auto"/>
                    </Grid>
                </StatusBarItem>
            </StatusBar>
        </DockPanel>
    </Grid>
</Controls:MetroWindow>
