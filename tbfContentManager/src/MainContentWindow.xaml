<Controls:MetroWindow x:Class="tbfContentManager.MainContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tbfContentManager"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="MainContentWindow" Height="485.667" Width="650" Closing="MetroWindow_Closing" Loaded="MetroWindow_Loaded">


    <Grid Margin="0,0,0,1" >

        <Label x:Name="lblWelcomeMessage" Content="Willkommen, lblNameOfUser" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,9,0,0" Width="226" FontSize="15" Height="30" FontWeight="Bold"/>
        <Grid HorizontalAlignment="Left" Width="642" Margin="0,0,0,165.8">
            <Separator Height="13" Margin="0,41,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btnLogout" Content="Logout" HorizontalAlignment="Left" Margin="557,10,0,0" VerticalAlignment="Top" Width="75" Height="31" Foreground="#CC0050EF" Click="btnLogout_Click"/>
            <Separator Height="13" Margin="0,95,-2,-54" VerticalAlignment="Top"/>
        </Grid>
        <Separator Margin="0,0,0.2,30" Height="3" VerticalAlignment="Bottom" Grid.Row="1"/>
        <DockPanel Height="30" VerticalAlignment="Bottom" Margin="0,0,0.2,0" Grid.Row="1">

            <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom"  Background="White" Height="24">
                <StatusBarItem  Height="23" VerticalAlignment="Bottom">
                    <TextBlock x:Name="lblConnectionStatus" Text="lblConnectionStatus" Width="110" Foreground="Black"/>
                </StatusBarItem>
                <Separator  Grid.Column="1" />
                <StatusBarItem  Height="23" VerticalAlignment="Bottom">
                    <TextBlock x:Name="lblCursorPosition" Text="lblOtherInformation" Width="110" Foreground="Black" VerticalAlignment="Bottom" />
                </StatusBarItem>
                <Separator Grid.Column="1" />
                <StatusBarItem  Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <Grid Width="207">
                        <TextBlock x:Name="lblLoadingInformation" Text="lblLoadingDescription" Foreground="Black" Margin="0,0,75,0" Width="122" VerticalAlignment="Bottom" />
                        <ProgressBar Margin="137,0,0,2" Height="Auto"/>
                    </Grid>
                </StatusBarItem>
            </StatusBar>
        </DockPanel>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="371" VerticalAlignment="Top" Width="642" Margin="0,54,0,0" Grid.RowSpan="2">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource {x:Type TabItem}}">
                    <Setter Property="Controls:ControlsHelper.HeaderFontSize" Value="16" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="Status">
                <Grid Margin="0,0,0,0.2">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="0,0,0,0.2">
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Grid Width="620">
                                <GroupBox x:Name="groupBox" Header="Connection Status" HorizontalAlignment="Left" Margin="10,5,0,0" Width="285">
                                    <Grid>
                                        <Label x:Name="label" Content="Database Status:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="0,40,0,0" FontWeight="Bold"/>
                                        <Label x:Name="label_Copy" Content="Controller Status:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="0,71,0,0" FontWeight="Bold"/>
                                        <Label x:Name="lblInternetOnline" Content="Online" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="166,9,-0.4,0" HorizontalContentAlignment="Right" Background="{x:Null}" Foreground="#FF17FF00"/>
                                        <Label x:Name="lblDatabaseOnline" Content="Online" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="166,40,-0.4,0" HorizontalContentAlignment="Right" Background="{x:Null}" Foreground="#FF17FF00" RenderTransformOrigin="-0.781,0.538"/>
                                        <Label x:Name="label_Copy3" Content="Internet Status:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="0,9,0,0" FontWeight="Bold"/>
                                        <Label x:Name="lblControllerOnline" Content="Online" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Margin="166,71,-0.4,0" HorizontalContentAlignment="Right" Background="{x:Null}" Foreground="#FF17FF00"/>
                                    </Grid>
                                </GroupBox>
                                <GroupBox x:Name="groupBox_Copy" Header="User Details" HorizontalAlignment="Left" Margin="325,5,0,0" VerticalAlignment="Top" Height="143" Width="285">
                                    <Grid Margin="0,0,-0.2,0">
                                        <Label x:Name="label1" Content="Forename:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="0,26,0,0" FontWeight="Bold"/>
                                        <Label x:Name="label_Copy1" Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="0,52,0,0" FontWeight="Bold"/>
                                        <Label x:Name="label_Copy2" Content="Nickname:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" FontWeight="Bold"/>
                                        <Label x:Name="label_Copy4" Content="&lt;NickName&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="70,0,0,0" HorizontalContentAlignment="Right"/>
                                        <Label x:Name="label_Copy5" Content="&lt;ForeName&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="70,26,0,0" HorizontalContentAlignment="Right"/>
                                        <Label x:Name="label_Copy6" Content="&lt;Name&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="70,52,0,0" HorizontalContentAlignment="Right"/>
                                        <Label x:Name="label_Copy7" Content="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="0,78,0,0" FontWeight="Bold"/>
                                        <Label x:Name="label_Copy8" Content="&lt;Email&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="70,78,0,0" HorizontalContentAlignment="Right"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid>
                                <GroupBox x:Name="groupBox_Copy2" Header="Active Licences" Margin="10,5,10,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="26*"/>
                                            <ColumnDefinition Width="23*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label x:Name="label3" Content="Amount:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,2,0,0" FontWeight="Bold"/>
                                        <Label x:Name="lblLicencesAmount" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,2,0,0" RenderTransformOrigin="0.455,0.904" Width="65" Height="24"/>
                                        <Label x:Name="label3_Copy" Content="Licences:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,2,0,0" FontWeight="Bold"/>
                                        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Margin="190,2,0,0" Height="15"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid>
                                <GroupBox x:Name="groupBox_Copy1" Header="Content Statistics" HorizontalAlignment="Left" Margin="10,5,0,0" Width="600">
                                    <Grid>
                                        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="79,9,0,0" VerticalAlignment="Top" Width="120"/>
                                        <Label x:Name="label2" Content="Workouts:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="0,40,0,0"/>
                                        <Label x:Name="label_Copy9" Content="Exercises:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="0,71,0,0"/>
                                        <Label x:Name="label_Copy10" Content="Rooms:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="0,9,0,0"/>
                                        <ComboBox x:Name="comboBox_Copy" HorizontalAlignment="Left" Margin="79,40,0,0" VerticalAlignment="Top" Width="120"/>
                                        <ComboBox x:Name="comboBox_Copy1" HorizontalAlignment="Left" Margin="79,71,0,0" VerticalAlignment="Top" Width="120"/>
                                        <Label x:Name="label_Copy11" Content="Amount:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="204,9,0,0"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem x:Name="tiRoomManager" Header="Raum&#xD;&#xA;Manager" HorizontalAlignment="Left" Margin="-0.2,0,0,0.4" Width="75">
                <Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Grid>
                                <Grid>
                                    <!--<Button Width="240" Height="35" VerticalAlignment="Top" Margin="5,5,280,0" >
                                        <StackPanel>
                                            -->
                                    <!--<Image Margin="-20,0,180,0" Source="/Images/72_72_weiß_rund.png" Stretch="None" RenderTransformOrigin="0.264,0.612" />-->
                                    <!--
                                            <TextBlock Margin="-3,-8,180,0" Text="+" FontSize="25"/>
                                            <TextBlock Margin="20,-26,0,0" Text="Neuen Raum hinzufügen" FontSize="15" Width="176" />
                                        </StackPanel>
                                    </Button>-->
                                </Grid>
                            </Grid>
                            <Grid>
                                <GroupBox x:Name="groupBox4" Header="Rooms" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Height="550" Width="290">

                                    <ListView x:Name="lvRoomList">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn DisplayMemberBinding="{Binding Name}"/>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </GroupBox>
                                <Grid>
                                    <GroupBox x:Name="groupBox5" Header="Raum Informationen" HorizontalAlignment="Left" Margin="325,5,0,0" VerticalAlignment="Top" Height="550" Width="290">
                                        <Grid>
                                            <Label x:Name="name_headline" Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
                                            <Label x:Name="txt_name" Content="Testraum" HorizontalAlignment="Left" VerticalAlignment="Top" Width="141" Margin="84,0,0,0" HorizontalContentAlignment="Right"/>
                                            <Label x:Name="beschreibung_headline" Content="Beschreibung:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="0,26,0,0" FontWeight="Bold"/>
                                            <TextBox x:Name="txt_beschreibung" VerticalAlignment="Top" Margin="0,52,0,0" Height="78">Beschreibung hier!</TextBox>
                                            <Label x:Name="private_headline" Content="Privater Raum?" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="0,130,0,0" FontWeight="Bold"/>
                                            <CheckBox x:Name="b_checkBox" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,134,10,0"/>
                                            <Label x:Name="name_trainer_headline" Content="Trainername(n):" Margin="0,156,10,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
                                            <ListBox Width="120" Height="52" Margin="100,156,10,303.2">
                                                <ListBoxItem Content="Hanz-Peter Wurst"/>
                                                <ListBoxItem Content="Friedrich Otto"/>
                                            </ListBox>
                                            <GroupBox x:Name="groupBox10" Header="Trainee's" HorizontalAlignment="Left" Margin="0,208,0,0" VerticalAlignment="Top" Height="302" Width="280">
                                                <ListBox>
                                                    <TextBox x:Name="txt_suchenTrainee" Margin="-5,5,0,5" Height="23" TextWrapping="Wrap" Text="Suchen" Width="260"/>
                                                    <ListBoxItem Content="Lars Pickelin"/>
                                                    <ListBoxItem Content="Avelina Ott"/>
                                                    <ListBoxItem Content="Niko Scheuermann"/>
                                                </ListBox>
                                            </GroupBox>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Workout &#xD;&#xA;Manager" HorizontalAlignment="Right" Margin="-0.4,0,0,0.4" Width="78">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Level&#xD;&#xA;Manager" HorizontalAlignment="Left" Margin="0.2,0,0,0.4" Width="75">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Exercise&#xD;&#xA;Manager" HorizontalAlignment="Left" Margin="-0.2,0,0,0.4" Width="75">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Trainee&#xD;&#xA;Manager">
                <Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Grid>
                                <GroupBox x:Name="groupBox9" Header="Rooms" HorizontalAlignment="Left" Margin="10,5,0,-55.8" VerticalAlignment="Top" Height="306" Width="285">
                                    <ListBox>
                                        <TextBox x:Name="txt_suchenRooms_exe" Margin="-7,5,0,5" Height="23" TextWrapping="Wrap" Text="Suchen" Width="270"/>
                                        <ListBoxItem Content="Raum1"/>
                                        <ListBoxItem Content="Raum2"/>
                                        <ListBoxItem Content="Raum3"/>
                                    </ListBox>
                                </GroupBox>
                                <GroupBox x:Name="groupBox100" Header="Trainee's" HorizontalAlignment="Left" Margin="325,5,-0.4,-55.8" VerticalAlignment="Top" Height="306" Width="285">
                                    <ListBox>
                                        <TextBox x:Name="txt_suchen_trainee_exe" Margin="-5,5,0,5" Height="23" TextWrapping="Wrap" Text="Suchen" Width="270"/>
                                        <ListBoxItem Content="Lars Pickelin"  Margin="0,0,0,5"/>
                                        <Button x:Name="btn_add_trainee" Margin="230,-50,0,5" Width="25" Height="10">
                                            <TextBlock Text="+" FontSize="20" Margin="0,-5,0,0" FontFamily="Gill Sans MT Condensed"/>
                                        </Button>
                                        <ListBoxItem Content="Avelina Ott" Margin="0,-25,0,5"/>
                                        <Button x:Name="btn_add_trainee1" Margin="230,-50,0,5" Width="25" Height="10">
                                            <TextBlock Text="+" FontSize="20" Margin="0,-5,0,0" FontFamily="Gill Sans MT Condensed"/>
                                        </Button>
                                        <ListBoxItem Content="Niko Scheuermann" Margin="0,-25,0,5"/>
                                        <Button x:Name="btn_add_trainee2" Margin="230,-50,0,5" Width="25" Height="10">
                                            <TextBlock Text="+" FontSize="20" Margin="0,-5,0,0" FontFamily="Gill Sans MT Condensed"/>
                                        </Button>
                                        <!--<Button Margin="6,400,128,86.2" Height="10" RenderTransformOrigin="-3.004,0.476">
                                            <TextBlock Text="Speichern" FontSize="20" Margin="0,-7,0,0" FontFamily="Gill Sans MT Condensed"/>
                                        </Button>
                                        <Button Margin="124,400,10,86.2" Height="10" RenderTransformOrigin="-3.004,0.476">
                                            <TextBlock Text="Abbrechen" FontSize="20" Margin="0,-7,0,0" FontFamily="Gill Sans MT Condensed"/>
                                        </Button>-->
                                    </ListBox>
                                </GroupBox>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>
