<Controls:MetroWindow x:Class="tbfContentManager.MainContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tbfContentManager"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="MainContentWindow" Height="459" Width="650">
    <Grid Margin="0,0,0,26">
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="338" VerticalAlignment="Top" Width="642" Margin="0,54,0,0">

            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource {x:Type TabItem}}">
                    <Setter Property="Controls:ControlsHelper.HeaderFontSize" Value="16" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="Status" BorderThickness="0" Margin="0,0,-52,17">
                <Grid Margin="105,-44,0,0" Background="#FFD0D1E5" Width="530" Height="330"/>
            </TabItem>
            <TabItem Header="User&#xD;&#xA;Management" Margin="-54,30,54,-36">
                <Grid Background="#FFE5E5E5" Margin="104,-44,0,0"/>
            </TabItem>
            <TabItem Header="Workout&#xD;&#xA;Management" HorizontalAlignment="Left" Width="107" Margin="-161,83,0,-83">
                <Grid Background="#FFE5E5E5" Margin="105,-44,0,0"/>
            </TabItem>
        </TabControl>
        <Grid HorizontalAlignment="Left" Height="54" VerticalAlignment="Top" Width="642">
            <Separator Height="13" Margin="0,41,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btnLogout" Content="Logout" HorizontalAlignment="Left" Margin="557,10,0,0" VerticalAlignment="Top" Width="75" Height="31" Foreground="#CC0050EF" Click="btnLogout_Click"/>
            <Image x:Name="image" Height="44" Margin="270,0,248,0" VerticalAlignment="Top"/>
        </Grid>
        <StatusBar Height="23" Margin="0,404,0,-45" VerticalAlignment="Top" Background="White">
            <StatusBarItem  Height="23" VerticalAlignment="Top">
                <TextBlock Name="lblConnectionStatus" Text="lblConnectionStatus" Width="110" Foreground="Black" />
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem  Height="23" VerticalAlignment="Top">
                <TextBlock Name="lblCursorPosition" Text="lblOtherInformation" Width="110" Foreground="Black" />
            </StatusBarItem>
        </StatusBar>
        <Separator Height="13" Margin="0,397,0,-8" VerticalAlignment="Top"/>
        <Label x:Name="lblWelcomeMessage" Content="Welcome, lblNameOfUser" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,9,0,0" Width="226" FontSize="15" Height="30" FontWeight="Bold"/>

    </Grid>
</Controls:MetroWindow>
